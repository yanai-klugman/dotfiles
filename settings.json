{
    "$schema": "https://aka.ms/terminal-profiles-schema",
    "defaultProfile": "{574e775e-4f2a-5b96-ac1e-a2962a402336}",
    "theme": "rose-pine",
    "centerOnLaunch": true,
    "launchMode": "focus",
    "initialCols": 96,
    "initialRows": 24,

    "experimental": {
        "enableShellIntegration": true,
        "rightClickContextMenu": true,
        "repositionCursorWithMouse": true,
        "useAtlasEngine": true
    },

    "profiles": {
        "defaults": {
            "colorScheme": "rose-pine",
            "font": {
                "face": "CaskaydiaCove Nerd Font",
                "size": 14
            },
            "opacity": 90,
            "cursorShape": "filledBox"
        },
        "list": [
            {
                "name": "PowerShell 7",
                "commandline": "pwsh.exe -NoLogo",
                "guid": "{574e775e-4f2a-5b96-ac1e-a2962a402336}",
                "hidden": false
            },
            {
                "name": "Fedora Remix",
                "commandline": "wsl.exe -d Fedora-Remix",
                "guid": "{d3f31bee-5823-5ed8-8e04-f31ed54f2cd9}",
                "hidden": false
            }
        ]
    },

    "schemes": [
        {
            "name": "rose-pine",
            "cursorColor": "#555169",
            "selectionBackground": "#2a2837",
            "background": "#191724",
            "foreground": "#e0def4",
            "black": "#26233a",
            "blue": "#9ccfd8",
            "cyan": "#ebbcba",
            "green": "#31748f",
            "purple": "#c4a7e7",
            "red": "#eb6f92",
            "white": "#e0def4",
            "yellow": "#f6c177",
            "brightBlack": "#6e6a86",
            "brightBlue": "#9ccfd8",
            "brightCyan": "#ebbcba",
            "brightGreen": "#31748f",
            "brightPurple": "#c4a7e7",
            "brightRed": "#eb6f92",
            "brightWhite": "#e0def4",
            "brightYellow": "#f6c177"
        }
    ],

    "themes": [
        {
            "name": "rose-pine",
            "tab": {
                "background": "#191724FF",
                "showCloseButton": "always",
                "unfocusedBackground": "#26233AFF"
            },
            "window": {
                "applicationTheme": "dark",
                "useMica": true
            }
        }
    ],

    "actions": [
        {
            "command": "nextTab",
            "keys": "ctrl+tab"
        },
        {
            "command": "prevTab",
            "keys": "ctrl+shift+tab"
        },
        {
            "command": {
                "action": "splitPane",
                "split": "right"
            },
            "keys": "alt+|"
        },
        {
            "command": {
                "action": "splitPane",
                "split": "down"
            },
            "keys": "alt+-"
        },
        {
            "command": {
                "action": "openSettings",
                "target": "settingsFile"
            },
            "keys": "ctrl+,"
        }
    ]
}

