{
  "workbench.iconTheme": "material-icon-theme",
  "workbench.sideBar.location": "right",
  "workbench.activityBar.location": "bottom",
  "workbench.editor.showTabs": "multiple",
  "workbench.editor.labelFormat": "short",
  "workbench.statusBar.visible": true,
  "workbench.list.smoothScrolling": true,
  "workbench.tree.renderIndentGuides": "onHover",
  "workbench.colorTheme": "One Dark Modern",
  "workbench.startupEditor": "none",
  "breadcrumbs.enabled": false,

  /*
    =====================================================
    ||               EDITOR SETTINGS                   ||
    =====================================================
    */

  // Font and Typography
  "editor.fontFamily": "Monaspice NF, Consolas, 'Courier New'",
  "editor.fontLigatures": true,
  "editor.fontSize": 16,
  "editor.suggestFontSize": 16,
  "editor.lineHeight": 1.2,

  // Text Rendering and Visibility
  "editor.wordWrap": "on",
  "editor.lineNumbers": "relative",
  "editor.renderWhitespace": "trailing",
  "editor.rulers": [88],
  "editor.smoothScrolling": true,
  "editor.cursorSmoothCaretAnimation": "explicit",
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.indentation": true,
  "editor.minimap.enabled": false,

  // Code Actions and Formatting
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit",
    "source.fixAll": "explicit"
  },
  "editor.copyWithSyntaxHighlighting": false,
  "editor.snippetSuggestions": "top",
  "editor.autoClosingBrackets": "always",
  "editor.autoClosingQuotes": "beforeWhitespace",

  // Indentation and Tabs
  "editor.tabSize": 2,
  "editor.detectIndentation": true,

  // Go To and Navigation
  "editor.gotoLocation.multipleReferences": "goto",
  "editor.gotoLocation.multipleDefinitions": "goto",
  "editor.gotoLocation.multipleDeclarations": "goto",
  "editor.gotoLocation.multipleImplementations": "goto",
  "editor.gotoLocation.multipleTypeDefinitions": "goto",

  // Clipboard and Copying
  "editor.emptySelectionClipboard": false,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.matchBrackets": "near",
  "editor.wordSeparators": "`~!@#%^&*()=+[{]}\\|;:'\",.<>/?",

  /*
    =====================================================
    ||               TERMINAL SETTINGS                 ||
    =====================================================
    */

  "terminal.integrated.fontFamily": "CaskaydiaCove NF, Consolas",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.lineHeight": 1.2,
  "terminal.integrated.scrollback": 5000,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.enablePersistentSessions": true,
  "terminal.integrated.env.windows": {
    "PROCESSOR_ARCHITECTURE": "ARM64"
  },

  /*
    =====================================================
    ||             FILE & SAVE SETTINGS                ||
    =====================================================
    */

  // Auto-Save and File Formatting
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 2000,
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.hotExit": "onExitAndWindowClose",

  // Exclude Settings
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/node_modules": true
  },
  "files.watcherExclude": {
    "**/tmp/**": true
  },

  /*
    =====================================================
    ||         SEARCH & EXCLUSIONS SETTINGS            ||
    =====================================================
    */

  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/.git": true,
    "**/dist": true,
    "**/out": true
  },
  "search.followSymlinks": false,

  /*
    =====================================================
    ||              GIT INTEGRATION                    ||
    =====================================================
    */

  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.countBadge": "tracked",
  "git.showProgress": true,

  /*
    =====================================================
    ||           TELEMETRY & PRIVACY SETTINGS          ||
    =====================================================
    */

  "workbench.enableExperiments": false,
  "telemetry.telemetryLevel": "crash",

  /*
    =====================================================
    ||         LANGUAGE-SPECIFIC CONFIGURATIONS        ||
    =====================================================
    */

  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true,
    "editor.tabSize": 4
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml",
    "editor.formatOnSave": true
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  /*
    =====================================================
    ||        PYTHON-SPECIFIC CONFIGURATION            ||
    =====================================================
    */

  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.autoImportCompletions": true,
  "python.analysis.diagnosticSeverityOverrides": {
    "reportMissingImports": "warning",
    "reportOptionalSubscript": "warning"
  },
  "python.testing.pytestEnabled": true,
  "python.testing.autoTestDiscoverOnSaveEnabled": false,

  /*
    =====================================================
    ||         POWERSHELL-SPECIFIC SETTINGS            ||
    =====================================================
    */

  "powershell.integratedConsole.focusConsoleOnExecute": false,
  "powershell.scriptAnalysis.enable": true,
  "powershell.codeFormatting.whitespaceBeforeOpenBrace": true,

  /*
    =====================================================
    ||           EXTENSIONS SETTINGS                   ||
    =====================================================
    */

  "extensions.autoUpdate": true,
  "extensions.autoCheckUpdates": false,

  // amVim
  "amVim.startInInsertMode": true,
  "amVim.bindCtrlCommands": false,
  "amVim.useSystemClipboard": true,
  "amVim.smartRelativeLineNumbers": true,
  "amVim.mimicVimSearchBehavior": true,

  /*
    =====================================================
    ||         FILE NESTING CONFIGURATION              ||
    =====================================================
    */

  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    ".env": "*.env, .env.*, .envrc",
    ".gitignore": ".gitattributes, .gitmodules, .gitmessage, .mailmap",
    "Dockerfile": "*.dockerfile, .dockerignore, docker-compose.*",
    "README*": "CHANGELOG*, LICENSE*, AUTHORS, CONTRIBUTORS",
    "requirements.txt": "requirements*.in, requirements*.txt",
    "pyproject.toml": "Pipfile.lock, poetry.lock, MANIFEST.in",
    "*.md": "$(capture).*",
    "*.json": "$(capture).lock",
    "setup.py": ".flake8, .isort.cfg, tox.ini, setup.cfg",
    "Pipfile": "Pipfile.lock, requirements*.txt, tox.ini",
    "*.toml": ".editorconfig, .isort.cfg, .flake8"
  },
  "editor.experimentalEditContextEnabled": true,
  "editor.experimentalWhitespaceRendering": "font",
  "editor.linkedEditing": true,
  "editor.wordWrapColumn": 88,
  "editor.cursorBlinking": "smooth",
  "editor.formatOnSave": true,
  "editor.inlineSuggest.syntaxHighlightingEnabled": true,
  "workbench.commandPalette.experimental.suggestCommands": true,
  "workbench.preferredDarkColorTheme": "One Dark Modern",
  "workbench.settings.editor": "json",
  "window.newWindowDimensions": "inherit",
  "explorer.incrementalNaming": "smart",
  "explorer.sortOrder": "type",
  "explorer.sortOrderLexicographicOptions": "unicode",
  "terminal.external.windowsExec": "wt"

  /*
    =====================================================
    ||       MISCELLANEOUS SETTINGS                    ||
    =====================================================
    ||   Placeholder for fields that may              ||
    ||   automatically be added by extensions,        ||
    ||   plugins, or the VS Code editor.              ||
    =====================================================
    */
}
